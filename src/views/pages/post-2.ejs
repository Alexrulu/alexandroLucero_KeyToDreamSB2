<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/styles/styles.css">
  <link rel="stylesheet" href="/styles/header.css">
  <link rel="icon" href="/images/favicon.jpg" type="image/png">
  <script src="https://kit.fontawesome.com/a4c24707d1.js" crossorigin="anonymous"></script>
  <title>Document</title>
</head>
<body>
  <header>
    <a href="/"><img class="header-logo-top-icon" src="/images/favicon.jpg"></a>
    <h2 class="header-logo-top-name">KEY TO DREAM</h2>
    <div class="left-header">
      <i class="fa-solid fa-bars"></i>
      <h3><a href="/">INICIO</a></h3>
      <h3 class="alquilar-h3"><a href="/alquilar" style="text-decoration: none; color: inherit;">ALQUILAR</a></h3>
      <h3 class="comprar-h3"><a href="/comprar" style="text-decoration: none; color: inherit;">COMPRAR</a></h3>
      <h3 class="masfiltros-button masfiltros-button-index">MÁS FILTROS<i class="fa-solid fa-angle-down"></i></h3>

    </div>
    <div class="right-header">
      <h3>
        <i class="fa-solid fa-magnifying-glass"></i>
        <input type="search" placeholder="Ciudad" class="header-buscar"></input>
      </h3>
      <h3>
        <i class="fa-solid fa-location-dot"></i>
        <p class="header-ubicacion">Usá tu dirección y enconTrá rapidamente</p>
      </h3>
      <%- include('../layouts/userHeader', { user: user, propiedades: propiedades }) %>
      <h3><a href="/favoritos"><i class="fa-solid fa-heart"></i></a></h3>
      
    </div>
  </header>
  
  <main class="post-2-box">
    <div class="post-2-progress-box">
      <p>1</p>
      <span></span>
      <p>2</p>
      <span></span>
      <p>3</p>
      <span></span>
      <p>4</p>
    </div>
    <div class="post-2-progress-word-box">
      <p>PRINCIPAL</p>
      <p>MULTIMEDIA</p>
      <p>EXTRAS</p>
      <p>PUBLICAR</p>
    </div>

    <form action="/property/save-property-step2" method="POST" enctype="multipart/form-data">
      <div class="post-2-first">
        <p>PRESENTACIÓN</p>
        <div>
          <button type="submit">CONTINUAR</button>
        </div>
      </div>
    
      <!-- Foto principal -->
      <div class="post-2-second">
        <p>FOTO PRINCIPAL</p>
        <label for="file-upload1" class="custom-file-upload">+</label>
        <input id="file-upload1" type="file" name="mainImage" accept="image/*" required>
      </div>
    
      <!-- Fotos secundarias -->
      <div class="post-2-each">
        <div>
          <p>FOTOS SECUNDARIAS</p>
          <p>(HASTA 4)</p>
        </div>
        <div>
          <label for="file-upload2" class="custom-file-upload">+</label>
          <input id="file-upload2" type="file" name="secondaryImages" accept="image/*" multiple>
        </div>
      </div>
    
    </form>
    
    
  </main>
  <script src="/js/clickHeader.js"></script>
  <script src="/js/clickPost.js"></script>
  <script src="/js/menuBurger.js"></script>
</body>
</html>